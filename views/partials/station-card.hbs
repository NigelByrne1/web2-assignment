<div class="columns is-multiline">
    
    <div class="column is-one-fifth">
        {{>icons/location}}
        <p>{{station.title}},  {{station.lat}},  {{station.lon}}</p>
    </div>

    <div class="column is-one-fifth">
        <p>Weather {{mostRecentReport.weatherCode}}</p>
        <figure class="image is-64x64">
            <img src="https://openweathermap.org/img/wn/{{mostRecentReport.iconCode}}@2x.png" alt="{{mostRecentReport.weatherCode}} - Icon">
        </figure>
    </div>

    <div class="column is-one-fifth">
        {{>icons/temperature}}
        <p>now: {{mostRecentReport.temperature}} 째C</p>
        <p>now: {{temperatureFahrenheit}} 째F</p>
        <p>max: {{maxTemperature}} 째C</p>
        <p>min: {{minTemperature}} 째C</p>
    </div>

    <div class="column is-one-fifth">
        {{>icons/wind}}
        <p>windspeed: {{mostRecentReport.windSpeed}} km/h</p>
        <p>wind direction: {{mostRecentReport.windDirection}}</p>
        <p>max windspeed: {{maxWindSpeed}}  km/h</p>
        <p>min windspeed: {{minWindSpeed}} km/h</p>
    </div>

    <div class="column is-one-fifth">
        {{>icons/pressure}}
        <p>current pressure: {{mostRecentReport.pressure}} hPa</p>
        <p>max Pressure: {{maxPressure}} hPa</p>
        <p>min Pressure: {{minPressure}} hPa</p>
    </div>
</div>