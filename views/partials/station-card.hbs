<div class="columns is-multiline m-1">

  <div class="column is-one-fifth">
    <div class="card has-background-black">
      <div class="card-content">
        <div class="is-flex">
          <div class="media-content has-text-white">
            <p class="title is-4 has-text-white is-spaced">{{station.title}}</p>
            <p class="subtitle-is-8 has-text-white">Lat: {{station.lat}}</p>
            <p class="subtitle-is-8 has-text-white">Lng: {{station.lon}}</p>
            <br>
            <br>
          </div>
          <div class="is-flex">
              {{>icons/location}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="column is-one-fifth">
    <div class="card has-background-black">
      <div class="card-content">
        <div class="is-flex">
          <div class="media-content has-text-white">
            <p class="title is-4 has-text-white is-spaced">Weather</p>
            <p class="subtitle-is-8 has-text-white">{{mostRecentReport.weatherCode}}</p>
            <br>
            <br>
            <br>
          </div>
          <div class="is-flex">
            <figure class="image is-48x48">
              <img src="https://openweathermap.org/img/wn/{{mostRecentReport.iconCode}}@2x.png" alt="Weather Icon">
            </figure>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="column is-one-fifth">
    <div class="card has-background-black">
      <div class="card-content">
        <div class="is-flex">
          <div class="media-content has-text-white">
            <p class="title is-4 has-text-white is-spaced">Temp</p>
            <p class="subtitle-is-8 has-text-white">{{mostRecentReport.temperature}} 째C</p>
            <p class="subtitle-is-8 has-text-white">{{temperatureFahrenheit}} 째F</p>
            <p class="subtitle-is-8 has-text-white">Max: {{maxTemperature}} 째C</p>
            <p class="subtitle-is-8 has-text-white">Min: {{minTemperature}} 째C</p>
          </div>
          <div class="is-flex">
              {{>icons/temperature}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="column is-one-fifth">
    <div class="card has-background-black">
      <div class="card-content">
        <div class="is-flex">
          <div class="media-content has-text-white">
            <p class="title is-4 has-text-white is-spaced">Wind</p>
            <p class="subtitle-is-8 has-text-white">{{mostRecentReport.windSpeed}} km/h</p>
            <p class="subtitle-is-8 has-text-white">{{mostRecentReport.windDirection}}</p>
            <p class="subtitle-is-8 has-text-white">Max: {{maxWindSpeed}} km/h</p>
            <p class="subtitle-is-8 has-text-white">Min: {{minWindSpeed}} km/h</p>
          </div>
          <div class="is-flex">
              {{>icons/wind}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="column is-one-fifth">
    <div class="card has-background-black">
      <div class="card-content">
        <div class="is-flex">
          <div class="media-content has-text-white">
            <p class="title is-4 has-text-white is-spaced">Pressure</p>
            <p class="subtitle-is-8 has-text-white">{{mostRecentReport.pressure}} hPa</p>
            <p class="subtitle-is-8 has-text-white">Max: {{maxPressure}} hPa</p>
            <p class="subtitle-is-8 has-text-white">Min: {{minPressure}} hPa</p>
            <br>
          </div>
          <div class="is-flex">
              {{>icons/pressure}}
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
